<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/choose_sports_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="CHOSE THE SPORTS YOU LIKE"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/event_type_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/choose_sports_title"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"/>
                <LinearLayout
                    android:id="@+id/ll_point_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_type_container"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:padding="15dp"/>
            <TextView
                android:id="@+id/choose_sports_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_point_container"
                android:gravity="center_horizontal"
                android:text="THE SPORTS YOU CHOSED"
                android:textColor="#ffffff"
                android:textSize="25sp"/>
            <com.sport.qifan.sport.custome.NoScrollGridView
                android:id="@+id/choose_sports_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_sports_title2"
                android:numColumns="5"/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/confirm_btn"
        style="@style/creat_event_button_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_orange_background"
        android:text="Confirm" />
</RelativeLayout>