<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="#4ca9e8"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp">

    <LinearLayout
        android:id="@+id/head_left_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"

        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/head_left_tv"
            android:layout_width="wrap_content"
            android:paddingTop="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="杭州"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/head_center_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="中间的"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:contentDescription="@null"
            android:paddingTop="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/head_right_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/head_right_tv"
            android:layout_width="wrap_content"
            android:paddingTop="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="杭州"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:visibility="visible"
            android:tag="@drawable/drawer_list"
            android:src="@drawable/drawer_list" />
    </LinearLayout>

</RelativeLayout>