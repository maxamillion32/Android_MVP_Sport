<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <!--新闻图片-->
    <ImageView
        android:id="@+id/iv_news_item_background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="#00bcd4" />

    <!--新闻内容-->
    <TextView
        android:id="@+id/tv_news_item_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/iv_news_item_background"/>

    <!--新闻图片底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_news_item_content"
        android:background="#00B6B6B6">
        <TextView
            android:id="@+id/tv_news_item_invitefriends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical"
            android:text="Invite friends"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_news_item_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="i want to join"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tv_news_item_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="Time to set up"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <!--新闻内容底部栏-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5FB6B6B6"
        android:layout_below="@+id/tv_news_item_content"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_news_item_views"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:drawableLeft="@drawable/view"
            android:drawablePadding="5dp"
            android:text="124 Views"/>
        <TextView
            android:id="@+id/tv_news_item_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/message"
            android:drawablePadding="5dp"
            android:text="14 Applies"/>
        <CheckBox
            android:id="@+id/cb_news_item_like"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/like_btn_selector"
            android:paddingLeft="9dp"
            android:textColor="#ffffff"
            android:background="#dc6263"
            android:focusable="false"
            android:text="20 Likes" />
    </LinearLayout>
</RelativeLayout>
